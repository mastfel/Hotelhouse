{% extends 'base.html.twig' %}

{% block title %}Mon espace perso{% endblock %}

{% block body %}

    <h1 class="text-center my-4">Mon espace personnel</h1>

    <div class="row">
        <div class="col-8 mx-auto">
            {% include 'include/_flashes.html.twig' %}
        </div>
    </div>


     <div class="row">
    
        <div class="col-10 mx-auto">

            <div class="card text-center">
                <div class="card-header">

                <p class="card-text">Prénom:{{ app.user.prenom}} </p>
                 <p class="card-text">nom:{{ app.user.nom }} </p>
                  <p class="card-text">Pseudo:{{ app.user.pseudo }} </p>
                   <p class="card-text">Email:{{ app.user.email }} </p>
                    <p class="card-text">Civilité:{{ app.user.civilite }} </p>
                </div>

        <div class="col-10 mx-auto">

            <table class="table">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Prénom</th>
                    <th>Nom</th>
                    <th>pseudo</th>
                    <th>Email</th>
                    <th>civilité</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
               
                
                    <tr>
                        <td>{{ app.user.id }}</td>
                        <td>{{ app.user.prenom }}</td>
                        <td>{{ app.user.nom }}</td>
                        <td>{{ app.user.pseudo }}</td>
                        <td>{{ app.user.email }}</td>
                        <td>{{ app.user.civilite }}</td>
                        
                        <td>
                            <a href="{{path('user_update', {'id':app.user.id} ) }}" class="btn btn-sm btn-primary" title="Modifier"><i class="fa-solid fa-user-pen"></i></a>
                            <a href="{{path('user_delete', {'id':app.user.id} ) }}" class="btn btn-sm btn-danger" title="Supprimer"><i class="fa-solid fa-trash"></i></a>
        
                        </td>
                    </tr>
             
                </tbody>
            </table>

        </div>
    </div>




{% endblock %}