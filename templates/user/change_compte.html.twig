 {% extends 'base.html.twig' %}

{% block title %}Ajouter un article{% endblock %}

{% block body %}

    
   
        <h1 class="text-center my-4">Modifier mes infos</h1>
    
<div class="row">
    <div class="col-8 mx-auto">

         {{ form_start(form) }}

                <div class="row">
                    <div class="col-6">{{ form_row(form.prenom) }}</div>
                    <div class="col-6">{{ form_row(form.nom) }}</div>
                </div>

                {{ form_row(form.pseudo) }}
                {{ form_row(form.email) }}

                {{ form_row(form.civilite) }}

            {{ form_end(form) }}
          
    
    </div>
</div>




{% endblock %}